<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Source_System_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>ISBLANK(Source_System_Id__c) = NOT(ISBLANK(TEXT(Source_System__c)))  || 
